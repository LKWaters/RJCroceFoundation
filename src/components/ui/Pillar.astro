---
import { APP_BLOG } from 'astrowind:config';
import type { Post } from '~/types';

import Image from '~/components/common/Image.astro';
import { getImage } from "astro:assets";
import PillarTop from "../../assets/images/Pillar_1t.png"
import PillarBottom from "../../assets/images/Pillar_1b.png"

import { findImage } from '~/utils/images';
import { getPermalink } from '~/utils/permalinks';

export interface Props {
  pillar?: any;
}

const { pillar } = Astro.props;

const link = APP_BLOG?.post?.isEnabled ? getPermalink('', 'post') : '';

---

<article
  class="mb-6 transition intersect-once intersect-quarter motion-safe:md:opacity-0 motion-safe:md:intersect:animate-fade"
>
    <div class="relative md:h-64 dark:bg-transparent rounded mb-6">
        {
            <Image
                src={PillarTop}
                class="w-full md:h-full rounded dark:bg-transparent"
                widths={[400, 900]}
                width={400}
                sizes="(max-width: 900px) 400px, 900px"
                alt={''}
                aspectRatio="16:9"
                layout="cover"
                loading="lazy"
                decoding="async"
                />
        }
    </div>

    <div>
        <h1 class="text-xl text-center sm:text-2xl font-bold leading-tight font-heading dark:text-slate-300">
            {
                <p>{pillar.header}</p>
            }
        </h1>
        <h2 class="text-xl text-center sm:text-2xl font-bold mb-3 font-heading dark:text-slate-300">
            {
                <p>{pillar.title}</p>
            }
        </h2>
        <p class="text-xl text-center sm:text-2xl font-bold font-heading dark:text-slate-300">
            {pillar.description}
        </p>
        <p class="text-xl h-32 text-center sm:text-base font-heading dark:text-slate-300">
            <i>{pillar.quote}</i>
        </p>
        <p class="text-xl text-center sm:text-xl font-bold font-heading dark:text-slate-300">
            - {pillar.author}
        </p>
    </div>

    <div class="relative md:h-64 dark:bg-transparent content-end rounded mt-6">
    {
            <Image
                src={PillarBottom}
                class="w-full md:h-full rounded dark:bg-transparent"
                widths={[400, 900]}
                width={400}
                sizes="(max-width: 900px) 400px, 900px"
                alt={''}
                aspectRatio="16:9"
                layout="cover"
                loading="lazy"
                decoding="async"
                />
        }
    </div>


</article>